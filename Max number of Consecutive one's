#include <iostream>
#include<vector>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int maxi=0,c=0;
    vector<int>arr(n);
    for(int i=0;i<n;i++){
           cin>> arr[i];   
        }
        
        for(int i=0;i<n;i++){
            if(arr[i]==0){
                c=0;
            }
            else
          {
              c++;
              maxi=max(maxi,c);
          }
        }
        cout<<maxi;
        return 0;
}
